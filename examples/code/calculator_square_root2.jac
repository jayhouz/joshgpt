# import the math library for the square root function
import math;

# 1. Define the Walker
walker SquareRootCalculator {
    has input_num: float;
    can calculate_root with root entry; 
}

# 2. Implement the Walker's Logic
impl SquareRootCalculator.calculate_root {
    let root_val = math.sqrt(self.input_num);
    let rounded_val = round(root_val, 4);

    # Use 'report' to structure and return the final output data.
    # The 'jac run' command is responsible for printing this report.
    report {
        "title": "Square Root Calculation Complete",
        "input_number": self.input_num,
        "square_root": rounded_val
    };
}

# 3. Main Execution Block (Simplified)
# The output is generated by the 'report' keyword above, not by printing here.
with entry:__main__ {
    # The 'root spawn' command executes the walker, which generates the report.
    root spawn SquareRootCalculator(input_num=25.0);
    root spawn SquareRootCalculator(input_num=10.0);
}